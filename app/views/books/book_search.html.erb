<% provide(:title, '本をさがす') %>
        <div class="column is-8 tweet-container">
            <div class="level">
                <h1 class="page-title is-size-4 has-text-primary has-text-weight-semibold">本をさがす</h1>
            </div>
            <%= form_tag(book_search_path, method: 'get')do %>
                <div class="filed">
                    <p class="control search-box">
                    <%= text_field_tag :search, "", class: "input", :placeholder => "キーワードを入力してください" %>
                    </p>
                </div>
                <div class="field">
                    <p class="control search-button">
                        <%= submit_tag 'Search', :name => nil, class: "button is-info" %>
                    </p>
                </div>
            <% end %>

            <% unless @items.nil? %>
                    <% @items.each do |item| %>
                        <article class="media">
                            <figure class="media-left">
                                <img src="<%= item['volumeInfo']['imageLinks']['smallThumbnail']%>">
                            </figure>
                            <div class="media-content">
                                <p>タイトル：<%= item['volumeInfo']['title']%></p>
                                <p>著者：<%= item['volumeInfo']['authors']%></p>
                                <p>出版社：<%= item['volumeInfo']['publisher']%></p>
                                <%= link_to "詳細", book_detail_path(google_id: item['id']) %>
                            </div>
                        </article>
                    <% end %>
            <% end %>
        </div>
    </div>
    </div>
