<% provide(:title, '本をさがす') %>
        <div class="column is-8 tweet-container">
            <div class="level">
                <h1 class="page-title is-size-4 has-text-primary has-text-weight-semibold">本をさがす</h1>
            </div>
            <%= form_tag(book_search_path, method: 'get')do %>
                <div class="filed">
                    <p class="control search-box">
                    <%= text_field_tag :search, "", class: "input", :placeholder => "タイトル、著者、ISBNを入力してください" %>
                    </p>
                </div>
                <div class="field">
                    <p class="control search-button">
                        <%= submit_tag 'Search', :name => nil, class: "button is-info" %>
                    </p>
                </div>
            <% end %>

            <% unless @book_items.nil? %>
                <%= render partial: 'shared/book_item', collection: @book_items %>
                <section class="pagination is-rounded">
                    <%= will_paginate @book_items, renderer: BulmaPagination::Rails %>
                </section>
            <% end %>
        </div>
    </div>
    </div>
