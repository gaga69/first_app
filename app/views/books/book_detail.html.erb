<% provide(:title, '本の詳細') %>
        <div class="column is-8 tweet-container">
            <div class="level">
                <h1 class="page-title is-size-4 has-text-primary has-text-weight-semibold">本の詳細</h1>
            </div>

            <article class="media">
                <figure class="media-left">
                    <img src="<%= @thumbnail %>">
                </figure>
                <div class="media-content">
                    <p>タイトル：<%= @title %></p>
                    <p>著者：<%= @author %></p>
                    <p>出版社：<%= @publisher %></p>
                    <p>ISBN: <%= @isbn %></p>
                    <p>詳細：<%= @description  %></p>
                </div>
            </article>

            <div class="control">
                <%= form_for(@book_record, :url => {:controller => :books, :action => :create}) do |f| %>
                    <%= f.hidden_field :user_id, value: @user.id %>
                    <%= f.hidden_field :isbn, value: @isbn %>
                    <label class="radio">
                        <%= f.radio_button :status, "want_to_read" %>読みたい本
                    </label>
                    <label class="radio">
                        <%= f.radio_button :status, "reading" %>読んでいる本
                    </label>
                    <label class="radio">
                        <%= f.radio_button :status, "already_red" %>読んだ本
                    </label>
                    <%= f.submit "登録する" %>
                <% end %>

            </div>
        </div>
    </div>
    </div>

