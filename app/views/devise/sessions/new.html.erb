<% provide(:title, 'Sign in') %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="hero  is-medium main-content">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Title
        </h1>
        <h2 class="subtitle">
          Explain App Service
        </h2>
        <p>
          <%= link_to "会員登録する", new_user_registration_path %>
      </div>
    </div>
    <div class="columns is-mobile form-colums">
      <div class="column is-5 is-offset-one-quarter">
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, class: "input" %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "input" %>
        </div>
        <div class="field">
          <p class="control">
            <button class="button is-info">
              Login
            </button>
          </p>
        </div>
      </div>
    </div>
  </section>
<% end %>