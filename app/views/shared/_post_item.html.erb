<article class="box media">
    <div class="media-content">
        <div class="level-left">
            <a class="level-item is-size-4"><%= @user.name %></a>
        </div>
        <div class="content posts">
            <div class="book-title"> 本のタイトル：<%= post_item.book_title %></div>
            <div class="book-author">著者：<%= post_item.book_author %></div>
            <div class="book-content"><%= post_item.content %></div>
            <div class="is-pulled-left" >
                <% if current_user == post_item.user %>
                    <%= link_to "編集する", edit_user_post_path(@user, post_item) %>  |
                    <%= link_to "削除する", user_post_path(@user, post_item), method: :delete, 
                                                                        data: { confirm: "削除してもいいですか？" } %>                                                       
                <% end %>
            </div>
            <div class="timestamp is-pulled-right">Posted:<%= time_ago_in_words(post_item.created_at) %> ago.</div>
        </div>
    </div>
</article>
