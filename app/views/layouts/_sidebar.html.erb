<div class="columns main-container">
<div class="column is-3">
    <aside class="menu">
        <p class="menu-label is-size-6 has-text-primary has-text-weight-bold">
            読書感想
        </p>
        <ul class="menu-list box">
            <li><%= link_to "本の感想一覧", user_posts_path(@user.id) %></li>
        </ul>
        <p class="menu-label is-size-6 has-text-primary has-text-weight-bold">
            本の管理
        </p>
        <ul class="menu-list box">
            <li><%= link_to "読みたい本", wish_user_path(@user.id) %></li>
            <li><%= link_to "読んでる本", reading_user_path(@user.id) %></li>
            <li><%= link_to "読んだ本", read_user_path(@user.id) %></li>
            <li><%= link_to "予約した本", reserved_user_path(@user.id) %></li>
        </ul>
        <p class="menu-label is-size-6 has-text-primary has-text-weight-bold">
            お気に入りの図書館
        </p>
        <ul class="menu-list box">
            <% @user.favorite_libraries.all.each do |library| %>
                <li><%= link_to library.libname, library_detail_path(pref: library.pref, city: library.city, libid: library.libid) %></li>
            <% end %>
        </ul>
        <p class="menu-label is-size-6 has-text-primary has-text-weight-bold">
            お気に入り
        </p>
        <ul class="menu-list box">
            <% @user ||= current_user %>
            <li>
                <a href="<%= following_user_path(@user) %>">
                    フォロー：<%= @user.followed_users.count %> 人
                </a>
            </li>
            <li>
                <a href="<%= followers_user_path(@user) %>">
                    フォロワー：<%= @user.followers.count %> 人
                </a>
            </li>
        </ul>
    </aside>
</div>
